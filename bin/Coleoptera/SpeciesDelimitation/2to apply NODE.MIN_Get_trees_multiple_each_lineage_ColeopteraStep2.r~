#PARTE 1. Matriz de distancias y UPGMA

#abrir paquetes necesarios ya instalados 
library(ape)
library(phangorn)
library(seqinr) 

Coleoptera <- read.FASTA("6Coleoptera209.fasta")  #leer fasta
dist.dna(Coleoptera, model = "F84", as.matrix = T)->dist_Coleoptera  #calcular matriz distancias por pares
Coleoptera_UPGMA <- upgma(dist_Coleoptera)  #hacer ?rbol
plot(Coleoptera_UPGMA)

